<h1>Update article</h1>

<% if @article.errors.any? %>
<h2>Following errors prevented the article from being saved</h2>
   <ul> <% @article.errors.full_messages.each do |err| %>
        <li><%= err%></li>
    <%end%>
    </ul>
<% end %>

<%= form_with(model: @article, local:true) do|f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
    </p>

    <p>
        <%= f.label :description %><br/>
        <%= f.text_area :description %><br/>
    </p>

    <p>
        <%= f.submit %><br/>
    </p>
<% end %>
<p><%= link_to 'return to article listing', articles_path %></p>